{% if payment_terms|length > 1 %}
  <div class="dropdown">
    <div class="dropdown-toggle" data-toggle="dropdown">
      {% for payment_term in payment_terms %}
        {% if payment_term.code == code %}
          <span>{{ payment_term.name }}</span>
        {% endif %}
      {% endfor %}
      <span class="d-none d-md-inline">{{ text_payment_term }}</span> <i class="fa fa-wallet"></i>
    </div>
    <div class="dropdown-menu">
      {% for payment_term in payment_terms %}
        <a href="{{ payment_term.href }}" class="dropdown-item"><span>{{ payment_term.name }}</span></a>
      {% endfor %}
    </div>
  </div>
{% endif %}