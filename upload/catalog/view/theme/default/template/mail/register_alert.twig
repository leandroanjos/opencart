<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/1999/REC-html401-19991224/strict.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>{{ title }}</title>
    </head>
    <body style="font-family: Arial, Helvetica, sans-serif; font-size: 12px; color: #000000;">

        <div style="width: 680px;">
            <table style="border-collapse: collapse; width: 100%; border-top: 1px solid #DDDDDD; border-left: 1px solid #DDDDDD; margin-bottom: 20px;">
                <thead>
                <tr>
                    <td style="font-size: 12px; border-right: 1px solid #DDDDDD; border-bottom: 1px solid #DDDDDD; background-color: #EFEFEF; font-weight: bold; text-align: left; padding: 7px; color: #222222;" colspan="2">
                        {{ text_signup }}
                    </td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td style="font-size: 12px;	border-right: 1px solid #DDDDDD; border-bottom: 1px solid #DDDDDD; text-align: left; padding: 7px;">
                        <b>{{ text_firstname }}</b> {{ firstname }} {{ lastname }}<br />
                        {% if razaosocial %}
                            <b>{{ text_razaosocial }}</b> {{ razaosocial }}<br />
                        {% endif %}
                        {% if customer_group %}
                            <b>{{ text_customer_group }}</b> {{ customer_group }}
                        {% endif %}
                    </td>
                    <td style="font-size: 12px;	border-right: 1px solid #DDDDDD; border-bottom: 1px solid #DDDDDD; text-align: left; padding: 7px;">
                        {% if doc %}
                            <b>{{ text_doc }}</b> {{ doc }}<br />
                        {% endif %}
                        <b>{{ text_email }}</b> {{ email }}<br />
                        <b>{{ text_telephone }}</b> {{ telephone }}<br />
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </body>
</html>